{
  "manifest_version": 3,
  "name": "YouTube Summarizer with Gemini",
  "version": "1.0.0",
  "description": "Summarize YouTube videos using Google's Gemini AI",
  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open YouTube Summarizer"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}

